generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = "mysql://root:root@localhost:3306/mydb"
  //Change the url to yours
}

enum Role {
  USER
  ADMIN
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  tasks Task[]
  role  Role   @default(USER)
}

model Task {
  id      Int      @id @default(autoincrement())
  title   String
  dueDate DateTime
  userId  Int
  user    User     @relation(fields: [userId], references: [id])
}
